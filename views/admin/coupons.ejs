<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupons - StarForge</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Inter:wght@600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/admin/coupon.css">
</head>

<body>
    <%- include('../partials/admin/navbar') %>

        <%- include('../partials/admin/sidepanel', { active:'coupons' }) %>

            <div class="main-content" id="main-content">
                <div class="coupons-section">
                    <h2>Coupons</h2>
                    <table class="coupons-table">
                        <thead>
                            <tr>
                                <th>Coupon Code</th>
                                <th>Discount</th>
                                <th>Expiry Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% coupons.forEach(coupon=> { %>
                                <tr>
                                    <td>
                                        <%= coupon.code %>
                                    </td>
                                    <td>
                                        <%= coupon.discount %>
                                    </td>
                                    <td>
                                        <%= coupon.expiry %>
                                    </td>
                                    <td>
                                        <%= coupon.status %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>

        <%- include('../partials/admin/footer') %>

    <script src="/js/admin/coupon.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>

</html>