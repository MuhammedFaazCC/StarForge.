<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Referral Settings - StarForge Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/admin/dashboard.css">
    <style>
        .stats-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            text-align: center;
            margin-bottom: 1.5rem;
        }
        .stats-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }
        .settings-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }
        .form-control:focus {
            border-color: #fca120;
            box-shadow: 0 0 0 0.2rem rgba(252, 161, 32, 0.25);
        }
        .btn-primary {
            background-color: #fca120;
            border-color: #fca120;
        }
        .btn-primary:hover {
            background-color: #e8940f;
            border-color: #e8940f;
        }
    </style>
</head>
<body>
    <%- include('../partials/admin/navbar') %>
    <%- include('../partials/admin/sidepanel', { active: 'dashboard' }) %>

    <div class="main-content" id="main-content">
        <div class="container-fluid">
            <div class="page-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="page-title">Referral Settings</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item active">Referral Settings</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

                <% if (success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i><%= success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="stats-card">
                            <div class="stats-icon text-primary">
                                <i class="fas fa-users"></i>
                            </div>
                            <h3><%= totalReferrers %></h3>
                            <p class="text-muted mb-0">Total Referrers</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card">
                            <div class="stats-icon text-success">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <h3><%= totalReferrals %></h3>
                            <p class="text-muted mb-0">Total Referrals</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card">
                            <div class="stats-icon text-warning">
                                <i class="fas fa-money-bill-wave"></i>
                            </div>
                            <h3>₹<%= totalBonusPaid.toLocaleString('en-IN') %></h3>
                            <p class="text-muted mb-0">Total Bonuses Paid</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card">
                            <div class="stats-icon text-info">
                                <i class="fas fa-percentage"></i>
                            </div>
                            <h3><%= totalReferrals > 0 ? ((totalReferrals / totalReferrers) * 100).toFixed(1) : 0 %>%</h3>
                            <p class="text-muted mb-0">Conversion Rate</p>
                        </div>
                    </div>
                </div>

                <!-- Settings Form -->
                <div class="settings-card">
                    <h4 class="mb-4"><i class="fas fa-cog me-2"></i>Referral Bonus Configuration</h4>
                    
                    <form action="/admin/referral-settings" method="POST">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="referrerBonus" class="form-label">
                                        <i class="fas fa-gift me-1"></i>Referrer Bonus Amount (₹)
                                    </label>
                                    <input type="number" class="form-control" id="referrerBonus" name="referrerBonus" 
                                           value="<%= referrerBonus %>" min="0" step="1" required>
                                    <div class="form-text">Amount credited to the referrer's wallet when someone signs up using their referral code</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="newUserBonus" class="form-label">
                                        <i class="fas fa-user-plus me-1"></i>New User Signup Bonus (₹)
                                    </label>
                                    <input type="number" class="form-control" id="newUserBonus" name="newUserBonus" 
                                           value="<%= newUserBonus %>" min="0" step="1" required>
                                    <div class="form-text">Amount credited to new user's wallet when they sign up using a referral code</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>How it works:</strong>
                                    <ul class="mb-0 mt-2">
                                        <li>When a new user signs up using a referral code, they get the signup bonus in their wallet</li>
                                        <li>The person who referred them gets the referrer bonus in their wallet</li>
                                        <li>Both amounts are immediately available for use in checkout</li>
                                        <li>All transactions are recorded in wallet history</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Update Settings
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Current Settings Display -->
                <div class="settings-card">
                    <h4 class="mb-4"><i class="fas fa-eye me-2"></i>Current Configuration</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <div class="me-3">
                                    <i class="fas fa-gift fa-2x text-success"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Referrer Bonus</h6>
                                    <h4 class="mb-0 text-success">₹<%= referrerBonus %></h4>
                                    <small class="text-muted">Per successful referral</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <div class="me-3">
                                    <i class="fas fa-user-plus fa-2x text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Signup Bonus</h6>
                                    <h4 class="mb-0 text-primary">₹<%= newUserBonus %></h4>
                                    <small class="text-muted">For new users</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const referrerBonus = document.getElementById('referrerBonus').value;
            const newUserBonus = document.getElementById('newUserBonus').value;
            
            if (referrerBonus < 0 || newUserBonus < 0) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Input',
                    text: 'Bonus amounts cannot be negative'
                });
                return false;
            }
            
            if (referrerBonus == 0 && newUserBonus == 0) {
                e.preventDefault();
                Swal.fire({
                    icon: 'warning',
                    title: 'Confirm Settings',
                    text: 'Both bonus amounts are set to 0. This will disable referral rewards. Continue?',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, continue',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.submit();
                    }
                });
                return false;
            }
        });
    </script>
