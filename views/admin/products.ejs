<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - StarForge</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Inter:wght@600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/admin/products.css">
</head>

<body>
    <%- include('../partials/admin/navbar') %>

    <%- include('../partials/admin/sidepanel', { active: 'products' }) %>

    <div class="main-content" id="main-content">
        <div class="products-section">
            <div class="products-header">
                <h2>Products</h2>
                <button class="add-product-btn" onclick="window.location.href='/admin/products/add'">Add Product</button>
            </div>

            <div class="products-controls">
                <input type="text" id="searchInput" placeholder="Search by name..." oninput="filterTable()" />
            </div>

            <table class="products-table" id="productsTable">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (products && products.length > 0) { %>
    <% products.forEach(product => { %>
        <tr>
            <td><%= product._id %></td>
            <td><%= product.name %></td>
            <td><%= product.category %></td>
            <td><%= product.price %></td>
            <td><%= product.stock %></td>
            <td>
                <button class="view-btn"
                    onclick="window.location.href='/admin/products/view/<%= product._id %>'">View</button>
                <button class="edit-btn"
                    onclick="window.location.href='/admin/products/edit/<%= product._id %>'">Edit</button>
                <button class="delete-btn"
                    onclick="deleteProduct('<%= product._id %>')">Delete</button>
            </td>
        </tr>
    <% }) %>
<% } else if (product) { %>
    <tr>
        <td><%= product._id %></td>
        <td><%= product.name %></td>
        <td><%= product.category %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td>
            <button class="view-btn"
                onclick="window.location.href='/admin/products/view/<%= product._id %>'">View</button>
            <button class="edit-btn"
                onclick="window.location.href='/admin/products/edit/<%= product._id %>'">Edit</button>
            <button class="delete-btn" onclick="deleteProduct('<%= product._id %>')">Delete</button>
        </td>
    </tr>
<% } else { %>
    <tr>
        <td colspan="6">No products found</td>
    </tr>
<% } %>

                </tbody>
            </table>

            <div class="pagination">
                <% if (hasPrevPage) { %>
                    <a href="/admin/products?page=<%= prevPage %>" class="page-link">Previous</a>
                <% } %>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="/admin/products?page=<%= i %>" class="page-link <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                <% } %>
                <% if (hasNextPage) { %>
                    <a href="/admin/products?page=<%= nextPage %>" class="page-link">Next</a>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('../partials/admin/footer') %>

    <script src="/js/admin/products.js"></script>

</body>

</html>
