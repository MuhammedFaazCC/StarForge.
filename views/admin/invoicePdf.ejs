<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Invoice</title>
  <link rel="stylesheet" href="/css/admin/invoicePDF.css">
</head>
<body>
  <h2>Invoice</h2>

  <div class="details">
    <p><strong>Date:</strong> <%= order.createdAt.toDateString() %></p>
    <p><strong>Customer:</strong> <%= order.userId.fullName || order.userId.email %></p>
    <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
  </div>

  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% order.items.forEach(item => { %>
        <tr>
          <td><%= item.name || (item.productId && item.productId.name) || 'Deleted Product' %></td>
          <td><%= item.quantity %></td>
          <td>₹<%= item.salesPrice.toFixed(2) %></td>
          <td>₹<%= (item.quantity * item.salesPrice).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="total">
    <% if (couponCode && discountAmount > 0) { %>
      <p><strong>Coupon Applied:</strong> <%= couponCode %></p>
      <p><strong>Discount:</strong> ₹<%= discountAmount.toFixed(2) %></p>
    <% } else { %>
      <p><strong>No Coupon Applied</strong></p>
    <% } %>
    <p class="highlight">Grand Total: ₹<%= order.totalAmount.toFixed(2) %></p>
  </div>
</body>
</html>