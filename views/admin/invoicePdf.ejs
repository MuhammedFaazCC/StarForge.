<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Invoice</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      padding: 40px;
      color: #333;
      background: #fff;
    }

    h2 {
      text-align: center;
      color: #222;
      margin-bottom: 30px;
    }

    .details {
      margin-bottom: 20px;
      border-bottom: 1px solid #ccc;
      padding-bottom: 10px;
    }

    .details p {
      margin: 6px 0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
      color: #333;
    }

    .total {
      margin-top: 30px;
      text-align: right;
    }

    .total p {
      margin: 6px 0;
      font-size: 1rem;
    }

    .highlight {
      font-weight: bold;
      font-size: 1.1rem;
    }
  </style>
</head>
<body>
  <h2>Invoice</h2>

  <div class="details">
    <p><strong>Date:</strong> <%= order.createdAt.toDateString() %></p>
    <p><strong>Customer:</strong> <%= order.userId.fullName || order.userId.email %></p>
    <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
  </div>

  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% order.items.forEach(item => { %>
        <tr>
          <td><%= item.name || (item.productId && item.productId.name) || 'Deleted Product' %></td>
          <td><%= item.quantity %></td>
          <td>₹<%= item.salesPrice.toFixed(2) %></td>
          <td>₹<%= (item.quantity * item.salesPrice).toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="total">
    <% if (couponCode && discountAmount > 0) { %>
      <p><strong>Coupon Applied:</strong> <%= couponCode %></p>
      <p><strong>Discount:</strong> ₹<%= discountAmount.toFixed(2) %></p>
    <% } else { %>
      <p><strong>No Coupon Applied</strong></p>
    <% } %>
    <p class="highlight">Grand Total: ₹<%= order.totalAmount.toFixed(2) %></p>
  </div>
</body>
</html>