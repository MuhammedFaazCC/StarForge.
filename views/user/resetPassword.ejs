<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Reset Password - StarForge</title>
  <link rel="stylesheet" href="/css/user/resetPassword.css">
</head>
<body>
  <div class="container">
    <h2>Reset Your Password</h2>

    <% if (typeof error !== 'undefined' && error) { %>
      <p class="error-message"><%= error %></p>
    <% } %>

    <form action="/resetPassword" method="POST">
      <div class="input-group">
        <label for="password">New Password</label>
        <input type="password" name="password" id="password" required minlength="6">
      </div>

      <div class="input-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirmPassword" required minlength="6">
      </div>

      <button type="submit">Change Password</button>
    </form>

    <div class="link">
      <a href="/login">Back to Login</a>
    </div>
  </div>
  <script src="/js/user/resetPassword.js"></script>
</body>
</html>
