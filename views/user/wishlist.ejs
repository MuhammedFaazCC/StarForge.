<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>StarForge - Wishlist</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/user/userProfile.css">
</head>
<body>
  <nav class="top-navbar">
    <a href="/" class="navbar-brand">StarForge.</a>
    <div class="navbar-user">
      <span>Welcome back, <%= user.fullName %></span>
    </div>
  </nav>

  <%- include('../partials/user/profileSidebar', { currentPage: 'wishlist' }) %>

  <main class="main-content">
    <div class="content-wrapper">
      <div class="profile-container">
      <h1 class="pageTitle">My Wishlist</h1>

      <div class="wishlist-items">
        <div class="userTable">
  <% if (wishlistItems.length > 0) { %>
    <% wishlistItems.forEach(item => { %>
      <div class="product-card">
        <div class="image-wrapper">
          <img src="<%= item.mainImage %>" alt="<%= item.name %>">
        </div>

        <div class="product-card-content">
          <h3><%= item.name %></h3>
          <p class="price">$<%= item.salesPrice %></p>

          <form action="/cart/add/<%= item._id %>" method="POST">
  <input type="hidden" name="quantity" value="1">
  <input type="hidden" name="source" value="wishlist">
  <button type="submit" class="add-to-cart">Add to Cart</button>
</form>

          <form action="/wishlist/remove" method="POST">
            <input type="hidden" name="productId" value="<%= item._id %>">
            <button class="remove-from-wishlist" type="submit">Remove</button>
          </form>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <p>Your wishlist is empty.</p>
  <% } %>
</div>
</div>

    </div>
    </div>
  </main>

  <script src="/js/user/wishlist.js"></script>
</body>
</html>