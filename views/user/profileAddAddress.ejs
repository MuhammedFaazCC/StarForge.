<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add New Address</title>
  <link rel="stylesheet" href="/css/user/profileDashboard.css" />
  <link rel="stylesheet" href="/css/user/profileAddAddress.css" />
  <link rel="stylesheet" href="/css/user/navbar-badges.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
  <%- include('../partials/user/navbar', { minimalNavbar: false }) %>
  <%- include('../partials/user/profileSidebar', { user, currentPage: 'address' }) %>
  <div class="main-content">
    <div class="content-wrapper">

      <div class="profile-container">
        <div class="page-header">
          <div>
            <h1 class="page-title">Add New Address</h1>
            <div class="breadcrumb">
              <a href="/LoadProfile">My Profile</a> / 
              <a href="/address">My Addresses</a> / 
              Add New Address
            </div>
          </div>
          <a href="/address" class="btn-secondary">
            <i class="fas fa-arrow-left"></i>
            Back to Addresses
          </a>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-error">
            <i class="fas fa-exclamation-circle"></i>
            <%= error %>
          </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
          <div class="alert alert-success">
            <i class="fas fa-check-circle"></i>
            <%= success %>
          </div>
        <% } %>

        <div class="address-form-container">
          <form id="addAddressForm" action="/address" method="POST" novalidate>
            <div class="form-section">
              <h3 class="section-title">
                <i class="fas fa-user"></i>
                Contact Information
              </h3>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="name" class="form-label">
                    <i class="fas fa-user"></i>
                    Full Name *
                  </label>
                  <input 
                    type="text"
                    class="form-control <%= fieldErrors.name ? 'is-invalid' : '' %>"
                    id="name"
                    name="name"
                    value="<%= formData.name || '' %>"
                  >
                  <div class="invalid-feedback"><%= fieldErrors.name || '' %></div>
                </div>
                
                <div class="col-md-6 mb-3">
                  <label for="phone" class="form-label">
                    <i class="fas fa-phone"></i>
                    Mobile Number *
                  </label>
                  <input 
                    type="tel"
                    class="form-control <%= fieldErrors.phone ? 'is-invalid' : '' %>"
                    id="phone"
                    name="phone"
                    value="<%= formData.phone || '' %>"
                  >
                  <div class="invalid-feedback"><%= fieldErrors.phone || '' %></div>
                </div>
              </div>
            </div>

            <div class="form-section">
              <h3 class="section-title">
                <i class="fas fa-map-marker-alt"></i>
                Address Details
              </h3>
              
              <div class="mb-3">
                <label for="address" class="form-label">
                  <i class="fas fa-home"></i>
                  Address (House No, Building, Street, Area) *
                </label>
                <textarea 
                  class="form-control <%= fieldErrors.address ? 'is-invalid' : '' %>"
                  id="address"
                  name="address"
                  rows="3"
                ><%= formData.address || '' %></textarea>
                <div class="invalid-feedback"><%= fieldErrors.address || '' %></div>
              </div>
              
              <div class="row">
                <div class="col-md-4 mb-3">
                  <label for="pinCode" class="form-label">
                    <i class="fas fa-map-pin"></i>
                    Pincode *
                  </label>
                  <input 
                    type="text"
                    class="form-control <%= fieldErrors.pinCode ? 'is-invalid' : '' %>"
                    id="pinCode"
                    name="pinCode"
                    value="<%= formData.pinCode || '' %>"
                  >
                  <div class="invalid-feedback"><%= fieldErrors.pinCode || '' %></div>
                </div>
                
                <div class="col-md-4 mb-3">
                  <label for="city" class="form-label">
                    <i class="fas fa-city"></i>
                    City *
                  </label>
                  <input 
                    type="text"
                    class="form-control <%= fieldErrors.city ? 'is-invalid' : '' %>"
                    id="city"
                    name="city"
                    value="<%= formData.city || '' %>"
                  >
                  <div class="invalid-feedback"><%= fieldErrors.city || '' %></div>

                </div>
                
                <div class="col-md-4 mb-3">
                  <label for="district" class="form-label">
                    <i class="fas fa-map"></i>
                    District *
                  </label>
                  <input 
                    type="text"
                    class="form-control <%= fieldErrors.district ? 'is-invalid' : '' %>"
                    id="district"
                    name="district"
                    value="<%= formData.district || '' %>"
                  >
                  <div class="invalid-feedback"><%= fieldErrors.district || '' %></div>
                </div>
              </div>
              
              <div class="mb-3">
                <label for="state" class="form-label">
                  <i class="fas fa-flag"></i>
                  State *
                </label>
                <input 
                  type="text"
                  class="form-control <%= fieldErrors.state ? 'is-invalid' : '' %>"
                  id="state"
                  name="state"
                  value="<%= formData.state || '' %>"
                >
                <div class="invalid-feedback"><%= fieldErrors.state || '' %></div>
              </div>
            </div>

            <div class="form-section">
              <div class="form-check">
                <input 
                  type="checkbox"
                  class="form-check-input"
                  id="isDefault"
                  name="isDefault"
                  <%= formData.isDefault ? 'checked' : '' %>
                >
                <label class="form-check-label" for="isDefault">
                  <i class="fas fa-star"></i>
                  Make this my default address
                </label>
              </div>
            </div>

            <div class="form-actions">
              <a href="/address" class="btn btn-secondary">
                <i class="fas fa-times"></i>
                Cancel
              </a>
              <button type="submit" class="btn btn-primary" id="submitBtn">
                <i class="fas fa-save"></i>
                Save Address
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/user/profileAddAddress.js"></script>
</body>
</html>