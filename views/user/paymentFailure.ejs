<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Payment Failed - StarForge</title>
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="/css/user/paymentFailure.css">
</head>
<body>
  <div class="payment-failure-container">
    <!-- Failure Icon -->
    <div class="failure-icon">âœ—</div>
    
    <!-- Main Heading -->
    <h1 class="failure-title">Payment Failed</h1>
    
    <!-- Error Message -->
    <p class="failure-message"><%= error %></p>

    <!-- Order Information (if available) -->
    <% if (orderId || referenceId) { %>
      <div class="order-info">
        <h4>Order Details</h4>
        <% if (orderId) { %>
          <p>
            <strong>Order ID:</strong>
            <span class="order-value"><%= orderId %></span>
          </p>
        <% } %>
        <% if (referenceId) { %>
          <p>
            <strong>Reference ID:</strong>
            <span class="order-value"><%= referenceId %></span>
          </p>
        <% } %>
        <p>
          <strong>Status:</strong>
          <span class="order-value" style="color: #dc3545;">Payment Failed</span>
        </p>
        <p>
          <strong>Time:</strong>
          <span class="order-value"><%= new Date().toLocaleString('en-IN', { 
            timeZone: 'Asia/Kolkata',
            year: 'numeric',
            month: 'short',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
          }) %></span>
        </p>
      </div>
    <% } %>

    <!-- Debug Info (remove this after testing) -->
    <!-- 
    Debug: orderId = <%= orderId %>, canRetry = <%= canRetry %>, condition = <%= orderId || canRetry %>
    -->

    <!-- Action Buttons -->
    <div class="action-buttons">
      <!-- Always show retry button if we have an orderId or if canRetry is true -->
      <% if (orderId || canRetry) { %>
        <button class="btn btn-retry" id="retryBtn" onclick="retryPayment('<%= orderId || 'temp_' + Date.now() %>')">
          Retry Payment
        </button>
      <% } %>
      
      <a href="/orders" class="btn btn-orders">
        Go to Orders
      </a>
      
      <a href="/" class="btn btn-home">
        Home
      </a>
    </div>

    <!-- Loading Indicator -->
    <div class="loading" id="loading">
      <div class="spinner"></div>
      <p>Processing payment retry...</p>
    </div>

    <!-- Help Section -->
    <div class="help-section">
      <p><strong>Need help?</strong> Contact our support team if you continue to experience issues.</p>
      <% if (orderId) { %>
        <p>You can retry payment within 24 hours of the original order.</p>
      <% } %>
    </div>
  </div>

  <script src="/js/user/checkout.js"></script>
</body>
</html>