<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Referral Dashboard - StarForge</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .referral-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
        }
        .stats-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            text-align: center;
            margin-bottom: 1rem;
        }
        .stats-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }
        .referral-link-box {
            background: rgba(255,255,255,0.1);
            border-radius: 10px;
            padding: 1rem;
            margin-top: 1rem;
        }
        .copy-btn {
            background: rgba(255,255,255,0.2);
            border: 1px solid rgba(255,255,255,0.3);
            color: white;
            border-radius: 5px;
            padding: 0.5rem 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .copy-btn:hover {
            background: rgba(255,255,255,0.3);
        }
        .reward-card {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1rem;
            border-left: 4px solid #28a745;
        }
        .social-share-btn {
            display: inline-block;
            padding: 0.5rem 1rem;
            margin: 0.25rem;
            border-radius: 25px;
            text-decoration: none;
            color: white;
            transition: all 0.3s ease;
        }
        .social-share-btn:hover {
            transform: translateY(-2px);
            color: white;
        }
        .whatsapp { background-color: #25D366; }
        .facebook { background-color: #1877F2; }
        .twitter { background-color: #1DA1F2; }
        .telegram { background-color: #0088CC; }
        .email { background-color: #EA4335; }
    </style>
</head>
<body>
    <%- include('../partials/user/navbar') %>

    <div class="container mt-4">
        <div class="referral-card">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2><i class="fas fa-gift me-2"></i>Refer Friends & Earn Rewards!</h2>
                    <p class="mb-3">Share your referral link and earn points when your friends sign up. Both you and your friend get exclusive benefits!</p>
                    
                    <div class="referral-link-box">
                        <label class="form-label">Your Referral Link:</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="referralLink" value="<%= referralUrl %>" readonly>
                            <button class="copy-btn" onclick="copyReferralLink()">
                                <i class="fas fa-copy me-1"></i>Copy
                            </button>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Your Referral Code:</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="referralCode" value="<%= referralCode %>" readonly>
                            <button class="copy-btn" onclick="copyReferralCode()">
                                <i class="fas fa-copy me-1"></i>Copy
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <i class="fas fa-users fa-5x opacity-50"></i>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-icon text-primary">
                        <i class="fas fa-user-friends"></i>
                    </div>
                    <h3><%= referralCount %></h3>
                    <p class="text-muted mb-0">Friends Referred</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-icon text-success">
                        <i class="fas fa-coins"></i>
                    </div>
                    <h3><%= referralPoints %></h3>
                    <p class="text-muted mb-0">Points Earned</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-icon text-warning">
                        <i class="fas fa-ticket-alt"></i>
                    </div>
                    <h3><%= unusedRewards.length %></h3>
                    <p class="text-muted mb-0">Unused Coupons</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-icon text-info">
                        <i class="fas fa-percentage"></i>
                    </div>
                    <h3>10%</h3>
                    <p class="text-muted mb-0">Reward Discount</p>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-share-alt me-2"></i>Share Your Referral Link</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Share your referral link on social media to reach more friends:</p>
                <div class="text-center">
                    <a href="https://wa.me/?text=Join%20StarForge%20using%20my%20referral%20link%20and%20get%20exclusive%20benefits!%20<%= encodeURIComponent(referralUrl) %>" 
                       target="_blank" class="social-share-btn whatsapp">
                        <i class="fab fa-whatsapp me-1"></i>WhatsApp
                    </a>
                    <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent(referralUrl) %>" 
                       target="_blank" class="social-share-btn facebook">
                        <i class="fab fa-facebook-f me-1"></i>Facebook
                    </a>
                    <a href="https://twitter.com/intent/tweet?text=Join%20StarForge%20using%20my%20referral%20link!&url=<%= encodeURIComponent(referralUrl) %>" 
                       target="_blank" class="social-share-btn twitter">
                        <i class="fab fa-twitter me-1"></i>Twitter
                    </a>
                    <a href="https://t.me/share/url?url=<%= encodeURIComponent(referralUrl) %>&text=Join%20StarForge%20using%20my%20referral%20link!" 
                       target="_blank" class="social-share-btn telegram">
                        <i class="fab fa-telegram-plane me-1"></i>Telegram
                    </a>
                    <a href="mailto:?subject=Join%20StarForge&body=Join%20StarForge%20using%20my%20referral%20link%20and%20get%20exclusive%20benefits!%20<%= referralUrl %>" 
                       class="social-share-btn email">
                        <i class="fas fa-envelope me-1"></i>Email
                    </a>
                </div>
            </div>
        </div>

        <% if (unusedRewards && unusedRewards.length > 0) { %>
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="fas fa-gift me-2"></i>Your Referral Rewards</h5>
                </div>
                <div class="card-body">
                    <% unusedRewards.forEach(reward => { %>
                        <div class="reward-card">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Referral Reward Coupon</h6>
                                    <p class="mb-1"><strong>Code:</strong> <span class="badge bg-success"><%= reward.couponCode %></span></p>
                                    <small class="text-muted">Issued on <%= new Date(reward.issuedAt).toLocaleDateString() %></small>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-primary fs-6">10% OFF</span>
                                    <br>
                                    <small class="text-muted">Min. order â‚¹500</small>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } %>

        <% if (referredUsers && referredUsers.length > 0) { %>
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="fas fa-users me-2"></i>Recent Referrals</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Joined Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% referredUsers.forEach(user => { %>
                                    <tr>
                                        <td><%= user.fullName %></td>
                                        <td><%= user.email %></td>
                                        <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                        <td><span class="badge bg-success">Active</span></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <% } %>

        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-question-circle me-2"></i>How Referrals Work</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-3">
                        <div class="mb-3">
                            <i class="fas fa-share fa-3x text-primary"></i>
                        </div>
                        <h6>1. Share Your Link</h6>
                        <p class="text-muted">Share your unique referral link with friends and family</p>
                    </div>
                    <div class="col-md-4 text-center mb-3">
                        <div class="mb-3">
                            <i class="fas fa-user-plus fa-3x text-success"></i>
                        </div>
                        <h6>2. Friend Signs Up</h6>
                        <p class="text-muted">Your friend creates an account using your referral link</p>
                    </div>
                    <div class="col-md-4 text-center mb-3">
                        <div class="mb-3">
                            <i class="fas fa-gift fa-3x text-warning"></i>
                        </div>
                        <h6>3. Both Get Rewards</h6>
                        <p class="text-muted">You earn points and get a 10% discount coupon</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/user/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function copyReferralLink() {
            const linkInput = document.getElementById('referralLink');
            linkInput.select();
            linkInput.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(linkInput.value).then(() => {
                showToast('Referral link copied to clipboard!');
            });
        }

        function copyReferralCode() {
            const codeInput = document.getElementById('referralCode');
            codeInput.select();
            codeInput.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(codeInput.value).then(() => {
                showToast('Referral code copied to clipboard!');
            });
        }

        function showToast(message) {
            const toast = document.createElement('div');
            toast.className = 'toast align-items-center text-white bg-success border-0 position-fixed';
            toast.style.cssText = 'top: 20px; right: 20px; z-index: 1050;';
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="fas fa-check-circle me-2"></i>${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            
            document.body.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            toast.addEventListener('hidden.bs.toast', () => {
                document.body.removeChild(toast);
            });
        }
    </script>
</body>
</html>