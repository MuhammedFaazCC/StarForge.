<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Referral Dashboard - StarForge</title>
    <link rel="stylesheet" href="/css/user/profileDashboard.css">
    <link rel="stylesheet" href="/css/user/navbar-badges.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .referral-card {
            background: #fca120;
            color: white;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
        }
        .stats-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            text-align: center;
            margin-bottom: 1rem;
        }
        .stats-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }
        .referral-link-box {
            background: rgba(255,255,255,0.1);
            border-radius: 10px;
            padding: 1rem;
            margin-top: 1rem;
        }
        .copy-btn {
            background: rgba(255,255,255,0.2);
            border: 1px solid rgba(255,255,255,0.3);
            color: white;
            border-radius: 5px;
            padding: 0.5rem 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .copy-btn:hover {
            background: rgba(255,255,255,0.3);
        }
        .reward-card {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1rem;
            border-left: 4px solid #28a745;
        }
        .social-share-btn {
            display: inline-block;
            padding: 0.5rem 1rem;
            margin: 0.25rem;
            border-radius: 25px;
            text-decoration: none;
            color: white;
            transition: all 0.3s ease;
        }
        .social-share-btn:hover {
            transform: translateY(-2px);
            color: white;
        }
        .whatsapp { background-color: #25D366; }
        .facebook { background-color: #1877F2; }
        .twitter { background-color: #1DA1F2; }
        .telegram { background-color: #0088CC; }
        .email { background-color: #EA4335; }
    </style>
</head>
<body>
    <%- include('../partials/user/navbar', { minimalNavbar: false }) %>
    <button class="sidebar-toggle1 d-md-none" id="sidebarToggle1" aria-label="Toggle Sidebar">
        <i class="fas fa-chevron-right" id="sidebarToggleIcon1"></i>
    </button>
    <%- include('../partials/user/profileSidebar', { user, currentPage: 'referral' }) %>

    <div class="main-content">
        <div class="content-wrapper">
            <div class="profile-container">
                <div class="page-header">
                    <div>
                        <h1 class="page-title">Referral Program</h1>
                        <p class="breadcrumb">
                            <a href="/">Home</a> / <a href="/LoadProfile">Profile</a> / Referral Program
                        </p>
                    </div>
                </div>
                
                <div class="referral-card">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2><i class="fas fa-gift me-2"></i>Refer Friends & Earn Wallet Money!</h2>
                    <p class="mb-3">Share your referral link and earn ₹<%= referrerBonus %> in your wallet when friends sign up. Your friends get ₹<%= newUserBonus %> signup bonus too!</p>
                    
                    <div class="mt-3">
                        <label class="form-label">Your Referral Code:</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="referralCode" value="<%= referralCode %>" readonly>
                            <button class="copy-btn" onclick="copyReferralCode()">
                                <i class="fas fa-copy me-1"></i>Copy
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <i class="fas fa-users fa-5x opacity-50"></i>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-icon text-primary">
                        <i class="fas fa-user-friends"></i>
                    </div>
                    <h3><%= referralCount %></h3>
                    <p class="text-muted mb-0">Friends Referred</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-icon text-success">
                        <i class="fas fa-coins"></i>
                    </div>
                    <h3><%= referralPoints %></h3>
                    <p class="text-muted mb-0">Points Earned</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-icon text-warning">
                        <i class="fas fa-wallet"></i>
                    </div>
                    <h3>₹<%= totalEarnings %></h3>
                    <p class="text-muted mb-0">Total Earned</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-icon text-info">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                    <h3>₹<%= walletBalance %></h3>
                    <p class="text-muted mb-0">Wallet Balance</p>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-info-circle me-2"></i>Referral Benefits</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="reward-card">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-user-plus fa-2x text-success"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">For You</h6>
                                    <p class="mb-0">Earn <strong>₹<%= referrerBonus %></strong> in your wallet for each successful referral</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="reward-card">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="fas fa-gift fa-2x text-warning"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">For Your Friend</h6>
                                    <p class="mb-0">Your friend gets <strong>₹<%= newUserBonus %></strong> signup bonus in their wallet</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <% if (referredUsers && referredUsers.length > 0) { %>
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="fas fa-users me-2"></i>Recent Referrals</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Joined Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% referredUsers.forEach(user => { %>
                                    <tr>
                                        <td><%= user.fullName %></td>
                                        <td><%= user.email %></td>
                                        <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                        <td><span class="badge bg-success">Active</span></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <% } %>

        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-question-circle me-2"></i>How Referrals Work</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-3">
                        <div class="mb-3">
                            <i class="fas fa-share fa-3x text-primary"></i>
                        </div>
                        <h6>1. Share Your Link</h6>
                        <p class="text-muted">Share your unique referral link with friends and family</p>
                    </div>
                    <div class="col-md-4 text-center mb-3">
                        <div class="mb-3">
                            <i class="fas fa-user-plus fa-3x text-success"></i>
                        </div>
                        <h6>2. Friend Signs Up</h6>
                        <p class="text-muted">Your friend creates an account using your referral link</p>
                    </div>
                    <div class="col-md-4 text-center mb-3">
                        <div class="mb-3">
                            <i class="fas fa-gift fa-3x text-warning"></i>
                        </div>
                        <h6>3. Both Get Rewards</h6>
                        <p class="text-muted">You earn ₹<%= referrerBonus %> in wallet, friend gets ₹<%= newUserBonus %> signup bonus</p>
                    </div>
                </div>
            </div>
        </div>
            </div>
        </div>
    </div>

    <%- include('../partials/user/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/user/landingPage.js"></script>
    <script>
        function copyReferralLink() {
            const linkInput = document.getElementById('referralLink');
            linkInput.select();
            linkInput.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(linkInput.value).then(() => {
                showToast('Referral link copied to clipboard!');
            });
        }

        function copyReferralCode() {
            const codeInput = document.getElementById('referralCode');
            codeInput.select();
            codeInput.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(codeInput.value).then(() => {
                showToast('Referral code copied to clipboard!');
            });
        }

        function showToast(message) {
            Swal.fire({
                toast: true,
                position: 'top-end',
                icon: 'success',
                title: message,
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true
            });
        }
    </script>
</body>
</html>