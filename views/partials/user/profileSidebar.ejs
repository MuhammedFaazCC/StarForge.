<style>
  .profile-sidebar1 {
  position: fixed;
  top: 58px;
  left: 0;
  width: 280px;
  height: calc(100vh - 70px);
  background: #ffffff;
  border-right: 1px solid #e5e7eb;
  box-shadow: 2px 0 15px rgba(0, 0, 0, 0.08);
  z-index: 999;
  overflow-y: auto;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
}

.sidebar-header1 {
  background: linear-gradient(135deg, #fca120 0%, #e8940f 100%);
  padding: 2rem 1.5rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  color: white;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  flex-shrink: 0;
  position: relative;
  overflow: hidden;
}

.sidebar-header1::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 150px;
  height: 150px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transform: rotate(45deg);
}

.sidebar-nav1 {
  padding: 0;
  flex: 1;
  overflow-y: auto;
}

.nav-list1 {
  list-style: none;
  padding: 0;
  margin: 0;
}

.nav-item1 {
  margin: 0;
}

.nav-link1 {
  display: flex;
  align-items: center;
  padding: 1rem 1.5rem;
  text-decoration: none;
  color: #64748b;
  font-weight: 500;
  font-size: 0.95rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-left: 4px solid transparent;
  position: relative;
  border-radius: 0 12px 12px 0;
  margin: 0.25rem 0;
}

.nav-link1:hover {
  background: linear-gradient(90deg, rgba(252, 161, 32, 0.08) 0%, rgba(252, 161, 32, 0.04) 100%);
  color: #fca120;
  border-left-color: #fca120;
  text-decoration: none;
  transform: translateX(4px);
  box-shadow: 0 2px 8px rgba(252, 161, 32, 0.15);
}

.nav-link1.active1 {
  background: linear-gradient(90deg, rgba(252, 161, 32, 0.12) 0%, rgba(252, 161, 32, 0.06) 100%);
  color: #fca120;
  font-weight: 600;
  border-left-color: #fca120;
  transform: translateX(4px);
  box-shadow: 0 4px 12px rgba(252, 161, 32, 0.2);
}

.active-indicator1 {
  position: absolute;
  right: 1.5rem;
  top: 50%;
  transform: translateY(-50%);
  width: 8px;
  height: 8px;
  background: #fca120;
  border-radius: 50%;
  box-shadow: 0 0 0 2px rgba(252, 161, 32, 0.3);
  animation: pulse-active1 2s infinite;
}

@keyframes pulse-active1 {
  0%, 100% { 
    transform: translateY(-50%) scale(1);
    opacity: 1;
  }
  50% { 
    transform: translateY(-50%) scale(1.2);
    opacity: 0.8;
  }
}

.nav-icon1 {
  width: 18px;
  height: 18px;
  margin-right: 1rem;
  flex-shrink: 0;
  font-size: 1rem;
  text-align: center;
  color: currentColor;
}

.nav-text1 {
  flex: 1;
}

.logout-link1:hover {
  background: linear-gradient(90deg, rgba(239, 68, 68, 0.08) 0%, rgba(239, 68, 68, 0.04) 100%);
  color: #ef4444;
  border-left-color: #ef4444;
  transform: translateX(4px);
  box-shadow: 0 2px 8px rgba(239, 68, 68, 0.15);
}

.nav-divider1 {
  margin: 0.5rem 0;
  padding: 0;
}

.sidebar-divider1 {
  border: none;
  height: 1px;
  background: linear-gradient(90deg, transparent, #e5e7eb, transparent);
  margin: 0.5rem 1.5rem;
}

.sidebar-toggle1 {
  position: fixed;
  top: 80px;
  left: 15px;
  z-index: 1001;
  background: #fca120;
  color: white;
  border: none;
  border-radius: 8px;
  width: 40px;
  height: 40px;
  display: none;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(252, 161, 32, 0.3);
  transition: all 0.3s ease;
}

.sidebar-toggle1:hover {
  background: #e8940f;
  transform: scale(1.05);
}

.sidebar-overlay1 {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 998;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.sidebar-overlay1.show1 {
  opacity: 1;
  visibility: visible;
}
</style>

<aside class="profile-sidebar1" id="profileSidebar1">
    <div class="sidebar-header1">
        <div class="profile-avatar1">
            <% if (user.profileImage) { %>
                <img src="/uploads/profiles/<%= user.profileImage %>" alt="Profile Picture" class="profile-image1" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                <div class="profile-initials1" style="display: none;"><%= user.fullName.split(' ').map(n => n[0]).join('') %></div>
            <% } else { %>
                <div class="profile-initials1"><%= user.fullName.split(' ').map(n => n[0]).join('') %></div>
            <% } %>
        </div>
        <div class="profile-info1">
            <h3 class="profile-name1"><%= user.fullName %></h3>
            <p class="profile-email1"><%= user.email %></p>
        </div>
    </div>

    <nav class="sidebar-nav1">
        <ul class="nav-list1">
            <li class="nav-item1">
                <a href="/LoadProfile" class="nav-link1 <%= currentPage === 'profile' ? 'active1' : '' %>" data-page="profile">
                    <i class="nav-icon1 fas fa-user"></i>
                    <span class="nav-text1">My Profile</span>
                    <% if (currentPage === 'profile') { %>
                        <span class="active-indicator1"></span>
                    <% } %>
                </a>
            </li>

            <li class="nav-item1">
                <a href="/address" class="nav-link1 <%= currentPage === 'address' ? 'active1' : '' %>" data-page="address">
                    <i class="nav-icon1 fas fa-map-marker-alt"></i>
                    <span class="nav-text1">My Addresses</span>
                    <% if (currentPage === 'address') { %>
                        <span class="active-indicator1"></span>
                    <% } %>
                </a>
            </li>

            <li class="nav-item1">
                <a href="/orders" class="nav-link1 <%= currentPage === 'orders' ? 'active1' : '' %>" data-page="orders">
                    <i class="nav-icon1 fas fa-shopping-bag"></i>
                    <span class="nav-text1">My Orders</span>
                    <% if (currentPage === 'orders') { %>
                        <span class="active-indicator1"></span>
                    <% } %>
                </a>
            </li>

            <li class="nav-item1">
                <a href="/wishlist" class="nav-link1 <%= currentPage === 'wishlist' ? 'active1' : '' %>" data-page="wishlist">
                    <i class="nav-icon1 fas fa-heart"></i>
                    <span class="nav-text1">My Wishlist</span>
                    <% if (currentPage === 'wishlist') { %>
                        <span class="active-indicator1"></span>
                    <% } %>
                </a>
            </li>

            <li class="nav-item1">
                <a href="/wallet" class="nav-link1 <%= currentPage === 'wallet' ? 'active1' : '' %>" data-page="wallet">
                    <i class="nav-icon1 fas fa-wallet"></i>
                    <span class="nav-text1">My Wallet</span>
                    <% if (currentPage === 'wallet') { %>
                        <span class="active-indicator1"></span>
                    <% } %>
                </a>
            </li>
            
            <li class="nav-item1">
                <a href="/referral" class="nav-link1 <%= currentPage === 'referral' ? 'active1' : '' %>" data-page="referral">
                    <i class="nav-icon1 fas fa-users"></i>
                    <span class="nav-text1">Referral Program</span>
                    <% if (currentPage === 'referral') { %>
                        <span class="active-indicator1"></span>
                    <% } %>
                </a>
            </li>

            <li class="nav-item1 nav-divider1">
                <hr class="sidebar-divider1">
            </li>
            
            <li class="nav-item1">
                <a href="/changePassword" class="nav-link1 <%= currentPage === 'password' ? 'active1' : '' %>" data-page="password">
                    <i class="nav-icon1 fas fa-lock"></i>
                    <span class="nav-text1">Change Password</span>
                    <% if (currentPage === 'password') { %>
                        <span class="active-indicator1"></span>
                    <% } %>
                </a>
            </li>

            <li class="nav-item1">
                <a href="#" id="logout-btn1" class="nav-link1 logout-link1">
                    <i class="nav-icon1 fas fa-sign-out-alt"></i>
                    <span class="nav-text1">Logout</span>
                </a>
            </li>
        </ul>
    </nav>
    
    <!-- Mobile Toggle Button -->
    <button class="sidebar-toggle1 d-md-none" id="sidebarToggle1" aria-label="Toggle Sidebar">
        <i class="fas fa-bars"></i>
    </button>
</aside>

<!-- Sidebar Overlay for Mobile -->
<div class="sidebar-overlay1 d-md-none" id="sidebarOverlay1"></div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Enhanced logout functionality
    const logoutBtn = document.getElementById('logout-btn1');
    if (logoutBtn) {
      logoutBtn.addEventListener('click', (e) => {
        e.preventDefault();
        
        Swal.fire({
          title: 'Are you sure?',
          text: "You will be logged out of your account!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#fca120',
          cancelButtonColor: '#6c757d',
          confirmButtonText: 'Yes, logout',
          cancelButtonText: 'Cancel',
          reverseButtons: true,
          customClass: {
            popup: 'sidebar-swal-popup1',
            confirmButton: 'sidebar-swal-confirm1',
            cancelButton: 'sidebar-swal-cancel1'
          }
        }).then((result) => {
          if (result.isConfirmed) {
            // Show loading state
            Swal.fire({
              title: 'Logging out...',
              text: 'Please wait',
              icon: 'info',
              allowOutsideClick: false,
              showConfirmButton: false,
              timer: 1500,
              timerProgressBar: true,
              customClass: {
                popup: 'sidebar-swal-popup1'
              }
            }).then(() => {
              window.location.href = "/logout";
            });
          }
        });
      });
    }
    
    // Enhanced mobile sidebar toggle functionality
    const sidebarToggle = document.getElementById('sidebarToggle1');
    const sidebar = document.getElementById('profileSidebar1');
    const overlay = document.getElementById('sidebarOverlay1');
    
    if (sidebarToggle && sidebar && overlay) {
      // Toggle sidebar
      sidebarToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        toggleSidebar();
      });
      
      // Close sidebar when clicking overlay
      overlay.addEventListener('click', () => {
        closeSidebar();
      });
      
      // Close sidebar when clicking outside
      document.addEventListener('click', (e) => {
        if (window.innerWidth < 768 && 
            sidebar.classList.contains('show1') && 
            !sidebar.contains(e.target) && 
            !sidebarToggle.contains(e.target)) {
          closeSidebar();
        }
      });
      
      // Handle escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && sidebar.classList.contains('show1')) {
          closeSidebar();
        }
      });
    }
    
    // Enhanced window resize handler
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        if (window.innerWidth >= 768) {
          closeSidebar();
        }
      }, 150);
    });
    
    // Add smooth scroll behavior for navigation links
    const navLinks = document.querySelectorAll('.nav-link1[href^="/"]');
    navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        // Close mobile sidebar when navigating
        if (window.innerWidth < 768) {
          setTimeout(() => {
            closeSidebar();
          }, 100);
        }
        
        // Add loading state to clicked link
        const icon = link.querySelector('.nav-icon1');
        const originalClass = icon.className;
        icon.className = 'nav-icon1 fas fa-spinner fa-spin';
        
        // Restore icon after a short delay (in case navigation is instant)
        setTimeout(() => {
          icon.className = originalClass;
        }, 1000);
      });
    });
    
    // Helper functions
    function toggleSidebar() {
      const isOpen = sidebar.classList.contains('show1');
      if (isOpen) {
        closeSidebar();
      } else {
        openSidebar();
      }
    }
    
    function openSidebar() {
      sidebar.classList.add('show1');
      overlay.classList.add('show1');
      document.body.classList.add('sidebar-open1');
      
      // Focus management for accessibility
      const firstNavLink = sidebar.querySelector('.nav-link1');
      if (firstNavLink) {
        setTimeout(() => firstNavLink.focus(), 300);
      }
    }
    
    function closeSidebar() {
      sidebar.classList.remove('show1');
      overlay.classList.remove('show1');
      document.body.classList.remove('sidebar-open1');
      
      // Return focus to toggle button for accessibility
      if (document.activeElement && sidebar.contains(document.activeElement)) {
        sidebarToggle.focus();
      }
    }
    
    // Add active page indicator animation
    const activeLink = document.querySelector('.nav-link1.active1');
    if (activeLink) {
      activeLink.style.animationDelay = '0.5s';
      activeLink.classList.add('fade-in-up1');
    }
    
    // Add hover effects for better UX
    const navItems = document.querySelectorAll('.nav-link1');
    navItems.forEach(item => {
      item.addEventListener('mouseenter', () => {
        if (!item.classList.contains('active1')) {
          item.style.transform = 'translateX(6px)';
        }
      });
      
      item.addEventListener('mouseleave', () => {
        if (!item.classList.contains('active1')) {
          item.style.transform = '';
        }
      });
    });
  });
  
  // Add custom styles for SweetAlert
  const swalStyles = `
    <style>
      .sidebar-swal-popup1 {
        border-radius: 16px !important;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25) !important;
      }
      .sidebar-swal-confirm1 {
        background: linear-gradient(135deg, #fca120 0%, #e8940f 100%) !important;
        border: none !important;
        border-radius: 8px !important;
        padding: 0.75rem 1.5rem !important;
        font-weight: 600 !important;
      }
      .sidebar-swal-cancel1 {
        background: #6c757d !important;
        border: none !important;
        border-radius: 8px !important;
        padding: 0.75rem 1.5rem !important;
        font-weight: 600 !important;
      }
    </style>
  `;
  
  if (!document.querySelector('#sidebar-swal-styles1')) {
    const styleElement = document.createElement('div');
    styleElement.id = 'sidebar-swal-styles1';
    styleElement.innerHTML = swalStyles;
    document.head.appendChild(styleElement);
  }
</script>
