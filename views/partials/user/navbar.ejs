<header class="navbar">
    <% if (!minimalNavbar) { %>
        <i class="fas fa-bars" id="hamburgerMenu"></i>
        <aside class="sidebar" aria-hidden="true" role="navigation">
            <div class="sidebar-header">
                <h1>StarForge.</h1>
            </div>
            <nav class="sidebar-nav" aria-label="Categories">
                <h2>Categories</h2>
