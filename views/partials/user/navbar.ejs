                    <li><a href="/products">All Products</a></li>
                    <li><a href="/products?category=On-Road">On-Road Wheels</a></li>
                    <li><a href="/products?category=Off-Road">Off-Road Wheels</a></li>
                    <li><a href="/products?category=Classic Wheels">Classic Wheels</a></li>

                </ul>
            </nav>
        </aside>
        <div class="sidebar-overlay" id="sidebarOverlay"></div>
    <% } %>

    <a class="logo" href="/">StarForge.</a>

    <% if (!minimalNavbar) { %>
        <% if (user) { %>
            <div class="nav-buttons">
                <a href="/wishlist" class="nav-link position-relative" title="Wishlist" id="wishlist-link">
                    <i class="far fa-heart"></i>
                    <% if (typeof wishlistCount !== 'undefined') { %>
                        <span class="count-badge <%= wishlistCount === 0 ? 'count-badge-zero' : '' %>" id="wishlistCount"><%= wishlistCount %></span>
                    <% } %>
                </a>
                <a href="/cart" class="nav-link position-relative" title="Cart" id="cart-link">
                    <i class="fas fa-shopping-cart"></i>
                    <% if (typeof cartCount !== 'undefined') { %>
                        <span class="count-badge <%= cartCount === 0 ? 'count-badge-zero' : '' %>" id="cartCount"><%= cartCount %></span>
                    <% } %>
                </a>
                <div class="profile-container1">
                    <i class="fas fa-user-circle profile-toggle" title="My Account"></i>
                    <div class="profile-dropdown">
                        <a href="/LoadProfile">Profile</a>
                        <a href="/orders">My Orders</a>
                        <a href="#" id="logout-btn">Logout</a>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="nav-buttons">
                <a href="/login" class="auth-button login-button">Login</a>
                <a href="/signup" class="auth-button signup-button">Sign Up</a>
            </div>
        <% } %>
    <% } %>
</header>
<script>
    // Global helper to update navbar counts from anywhere
    window.updateNavbarCounts = function ({ wishlistCount, cartCount } = {}) {
        const apply = (id, value) => {
            const el = document.getElementById(id);
            if (!el || typeof value === 'undefined') return;
            const n = Number(value) || 0;
            el.textContent = n;
            if (n > 0) {
                el.classList.remove('count-badge-zero');
            } else {
                el.classList.add('count-badge-zero');
            }
        };
        apply('wishlistCount', wishlistCount);
        apply('cartCount', cartCount);
    };
</script>