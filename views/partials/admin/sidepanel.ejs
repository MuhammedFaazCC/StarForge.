        <li><a href="/admin/products" class="<%= active === 'products' ? 'active' : '' %>">Products</a></li>
        <li><a href="/admin/orders" class="<%= active === 'orders' ? 'active' : '' %>">Orders</a></li>
        <li><a href="/admin/customers" class="<%= active === 'customers' ? 'active' : '' %>">Customers</a></li>
        <li><a href="/admin/sales" class="<%= active === 'sales' ? 'active' : '' %>">Sales</a></li>
        <li><a href="/admin/coupons" class="<%= active === 'coupons' ? 'active' : '' %>">Coupons</a></li>
        <li><a href="/admin/categories" class="<%= active === 'categories' ? 'active' : '' %>">Categories</a></li>
    </ul>
</div>